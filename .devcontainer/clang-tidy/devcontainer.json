// built with Clang; analyzed with Clang-Tidy
{
	"name": "Clang-Tidy",
	"build": {
		"dockerfile": "${localWorkspaceFolder}/.devcontainer/images/clang/Dockerfile",
		"context": "${localWorkspaceFolder}"
	},
	"postCreateCommand": {
		"prep-build-dir": [
			".devcontainer/prep-build-dir",
			"clang-tidy",
			"Release",
			"-DCMAKE_CXX_STDLIB_MODULES_JSON=/usr/lib/llvm-22/lib/libc++.modules.json",  // https://stackoverflow.com/a/79852649/671509
			"-DCMAKE_CXX_CLANG_TIDY=clang-tidy"
		]
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-vscode.cmake-tools",
				"ms-vscode.cpptools"
			]
		}
	}
}
