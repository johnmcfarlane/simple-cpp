// built with Clang; optimized for production
{
    "name": "Clang release",
    "build": {
        "dockerfile": "${localWorkspaceFolder}/.devcontainer/clang-release/Dockerfile",
        "context": "${localWorkspaceFolder}"
    },
    "remoteUser": "root",
    "postCreateCommand": {
        "configure build system": [
            "cmake",
            "--toolchain", "/tmp/build/conan_toolchain.cmake",
            "-B", "/tmp/build",
            "-DCMAKE_BUILD_TYPE=Release",
            "-DCMAKE_PREFIX_PATH=/tmp/build",
            "-G", "Ninja",
            "-S", ".",
            "-DCMAKE_CXX_STDLIB_MODULES_JSON=/usr/lib/llvm-22/lib/libc++.modules.json"
        ]
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cmake-tools",
                "ms-vscode.cpptools"
            ]
        }
    }
}
