// built with Clang; optimized for testing
{
    "name": "Clang test",
    "build": {
        "dockerfile": "${localWorkspaceFolder}/.devcontainer/Dockerfile",
        "args": {
            "base_image": "base-clang",
            "base_image_version": "2026-02-03",
            "profile": "clang-test"
        },
        "context": "${localWorkspaceFolder}"
    },
    "remoteUser": "root",
    "postCreateCommand": {
        "configure build system": [
            "cmake",
            "--toolchain", "/tmp/build/conan_toolchain.cmake",
            "-B", "/tmp/build",
            "-DCMAKE_BUILD_TYPE=Release",
            "-DCMAKE_PREFIX_PATH=/tmp/build",
            "-G", "Ninja",
            "-S", "${localEnv:PROJECT_SUBDIRECTORY:.}",
            "-DCMAKE_CXX_STDLIB_MODULES_JSON=/usr/lib/llvm-22/lib/libc++.modules.json"
        ]
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cmake-tools",
                "ms-vscode.cpptools"
            ]
        }
    }
}
