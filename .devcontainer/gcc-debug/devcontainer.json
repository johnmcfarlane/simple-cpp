// built with GCC; optimized for debugging
{
    "name": "GCC debug",
    "build": {
        "dockerfile": "${localWorkspaceFolder}/.devcontainer/gcc-debug/Dockerfile",
        "context": "${localWorkspaceFolder}"
    },
    "remoteUser": "root",
    "postCreateCommand": {
        "configure build system": [
            "cmake",
            "--toolchain", "/tmp/build/conan_toolchain.cmake",
            "-B", "/tmp/build",
            "-DCMAKE_BUILD_TYPE=Debug",
            "-DCMAKE_PREFIX_PATH=/tmp/build",
            "-G", "Ninja",
            "-S", "."
        ]
    }
}
