// built with GCC; optimized for production
{
    "name": "GCC release",
    "build": {
        "dockerfile": "${localWorkspaceFolder}/.devcontainer/gcc-release/Dockerfile",
        "context": "${localWorkspaceFolder}"
    },
    "postCreateCommand": {
        "configure build system": [
            "cmake",
            "--toolchain", "/tmp/build/conan_toolchain.cmake",
            "-B", "/tmp/build",
            "-DCMAKE_BUILD_TYPE=Release",
            "-DCMAKE_PREFIX_PATH=/tmp/build",
            "-G", "Ninja",
            "-S", "."
        ]
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cmake-tools",
                "ms-vscode.cpptools"
            ]
        }
    }
}
